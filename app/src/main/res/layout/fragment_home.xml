<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeFragment">

    <!--header-->
    <RelativeLayout
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/status_color"
        android:minHeight="@dimen/h380_45"
        android:elevation="@dimen/h380_3">

        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/h380_5"
            android:textSize="@dimen/h380_18"
            android:text="مدیریت پویا ایمن سحاب"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            />


        <ImageView
            android:id="@+id/back_ic"
            android:layout_width="@dimen/h380_35"
            android:layout_height="@dimen/h380_35"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/h380_20"
            android:src="@drawable/exit_ic"
            android:layout_centerVertical="true"
            android:padding="@dimen/h380_3"
            android:elevation="@dimen/h380_50"/>

    </RelativeLayout>
    <!--header-->

    <!--body-->
    <RelativeLayout
        android:id="@+id/services"
        android:layout_below="@id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/h380_3">

        <!--teacher list-->
        <ImageView
            android:id="@+id/add_guard"
            android:layout_width="@dimen/h380_90"
            android:layout_height="@dimen/h380_90"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/h380_65"
            android:layout_marginTop="@dimen/h380_60"
            android:padding="@dimen/h380_3"
            android:src="@drawable/admin_settings"
            />
        <TextView
            android:id="@+id/currency_list_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/add_guard"
            android:layout_alignLeft="@id/add_guard"
            android:layout_marginLeft="@dimen/h380_10n"
            android:layout_marginRight="@dimen/h380_10n"
            android:textAlignment="center"
            android:layout_below="@id/add_guard"
            android:textSize="@dimen/h380_16"
            android:text="ایجاد نگهبان"
            android:textColor="@color/status_color"
            android:gravity="center_horizontal" />

        <!--teacher list-->



        <ImageView
            android:id="@+id/online_status"
            android:layout_width="@dimen/h380_90"
            android:layout_height="@dimen/h380_90"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/h380_65"
            android:layout_marginTop="@dimen/h380_60"
            android:padding="@dimen/h380_3"
            android:src="@drawable/online_status"
            />
        <TextView
            android:id="@+id/online_status_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/online_status"
            android:layout_alignLeft="@id/online_status"
            android:layout_marginLeft="@dimen/h380_5n"
            android:layout_marginRight="@dimen/h380_5n"
            android:textAlignment="center"
            android:layout_below="@id/online_status"
            android:textSize="@dimen/h380_16"
            android:text="دریافت گزارش"
            android:textColor="@color/status_color"
            android:gravity="center_horizontal" />



        <!--quiz list-->
        <ImageView
            android:id="@+id/settings"
            android:layout_width="@dimen/h380_90"
            android:layout_height="@dimen/h380_90"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/h380_65"
            android:layout_below="@id/add_guard"
            android:layout_marginTop="@dimen/h380_60"
            android:padding="@dimen/h380_3"
            android:src="@drawable/change_texts"
            />
        <TextView
            android:id="@+id/push_notofication_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/add_guard"
            android:layout_alignLeft="@id/add_guard"
            android:textAlignment="center"
            android:layout_marginRight="@dimen/h380_15n"
            android:layout_marginLeft="@dimen/h380_15n"
            android:layout_below="@id/settings"
            android:textSize="@dimen/h380_16"
            android:text="تنظیمات عمومی"
            android:textColor="@color/status_color"
            android:gravity="center_horizontal" />


    </RelativeLayout>
    <!--body-->
</FrameLayout>